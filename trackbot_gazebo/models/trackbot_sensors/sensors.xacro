<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Camera -->
  <xacro:macro name="camera_sensor" params="sensor_name parent_link xyz:='0 0 0' rpy:='0 0 0'">
    <link name="${sensor_name}_link">
      <visual name="${sensor_name}_visual">
        <geometry><box size="0.05 0.05 0.05"/></geometry>
      </visual>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
      </inertial>
    </link>

    <joint name="${sensor_name}_joint" type="fixed">
      <parent link="${parent_link}"/>
      <child  link="${sensor_name}_link"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
    </joint>

    <!-- SDF sensor lives under a gazebo block, referenced to the link -->
    <gazebo reference="${sensor_name}_link">
      <sensor name="${sensor_name}" type="camera">
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>

        <!-- Set an explicit topic; Gazebo will still scope it under /model/<name>/... -->
        <topic>/camera/image_raw</topic>
        <gz_frame_id>${sensor_name}_link</gz_frame_id>

        <camera>
          <camera_info_topic>/camera/camera_info</camera_info_topic>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width><height>480</height><format>R8G8B8</format>
          </image>
          <clip><near>0.1</near><far>100</far></clip>
        </camera>
      </sensor>
    </gazebo>
  </xacro:macro>

  <!-- IMU -->
  <xacro:macro name="imu_sensor" params="sensor_name parent_link xyz:='0 0 0.2' rpy:='0 0 0'">
    <link name="${sensor_name}_link">
      <visual name="${sensor_name}_visual">
        <geometry><box size="0.03 0.03 0.03"/></geometry>
      </visual>
      <inertial>
        <mass value="0.05"/>
        <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
      </inertial>
    </link>

    <joint name="${sensor_name}_joint" type="fixed">
      <parent link="${parent_link}"/>
      <child  link="${sensor_name}_link"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
    </joint>

    <gazebo reference="${sensor_name}_link">
      <sensor name="${sensor_name}" type="imu">
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <visualize>true</visualize>
        <topic>/imu/data</topic>
        <gz_frame_id>${sensor_name}_link</gz_frame_id>
      </sensor>
    </gazebo>
  </xacro:macro>

</robot>
